/**index.wxss**/
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
  .swiper-item{
    display: block;
    height: 300rpx;
    background-color: cornflowerblue;
  }
  .swiper-image{
    width: 100%;
    height: 100%; 
  }
  .classify{
    line-height: 80rpx;
    text-align: left;
    border-left: 14rpx solid rgb(200,8, 8);
    width: 40%;
    margin-left: 30rpx;
  }
  .classify-text{
    margin-left: 30rpx;
  }
  .nav{
    display: flex;
    flex-direction: row;
    margin-bottom: 30rpx;
  }
  .nav-item{
    width: 100%;
    height: 100%;
  }
  .nav-image{
    display: flex;
    width: 250rpx;
    height: 250rpx;
  }
  .nav-image-text{
    text-align: center;
    font-weight: 700;
    font-size: 26rpx;
    margin-top: -60rpx;
  }
  .music-list{
    background-color: #F8F8F8;
    height:300rpx;
    display: flex;
    border-bottom: 2rpx solid darkgrey;
    margin-right: 20rpx;
    margin-left: 20rpx;
  }
  .music-list-photo{
    height: 216rpx;
    width: 384rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
  }
  .music-list-text{
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
    height: 300rpx;
    width: 306rpx;
  }
  .music-list-title{
    font-weight: 700;
    font-size: 34rpx;
    text-align: left;
  }
  .music-list-desc{
    color:darkgrey;
    font-size: 24rpx;
  }
  .music-list-label1{
    text-align: center;
    line-height: 30rpx;/*调文字的高度*/
    width: 120rpx;
    height: 30rpx;
    background-color: darkmagenta;
    color:white;
    font-size: 24rpx;
    border-radius: 10rpx;
    margin-top: 30rpx;
  }