.swiper-item{
  display: block;
  height: 400rpx;
  background-color: cornflowerblue;
}
.swiper-image{
  width: 100%;
  height: 100%; 
}
.massage-service{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  border-bottom:2rpx solid darkgrey;
  margin-left: 20rpx;
  margin-right:20rpx;
  font-weight: 500;
}

.btn-service{
  color: black;
  background-color: #f6f6f6;
}
.icon-service{
  margin-right: 350rpx;
  line-height: 80rpx;
}
.doctor-list{
  background-color: #F8F8F8;
  height:300rpx;
  display: flex;
  border-bottom: 2rpx solid darkgrey;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.doctor-list-photo{
  height: 216rpx;
  width: 384rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.doctor-list-text{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  height: 300rpx;
  width: 306rpx;
}
.doctor-list-name{
  font-weight: 700;
  font-size: 34rpx;
  text-align: left;
}
.doctor-list-desc{
  color:darkgrey;
  font-size: 24rpx;
}